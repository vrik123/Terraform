#!groovy
import groovy.txt.*
import groovy.txt.markup.*
node{
	def tfHome = tool name: 'Terraorm-12', type: 'terraform'
	environment {
    	PATH = "${PATH}:${tfHome}"
 	 }
	stage('Test'){
		deleteDir()
		dir('Terraform'){
			git branch: 'main', credentialsId: 'git-creds', url: 'https://github.com/vrik123/Terraform.git'
			echo "WORKSPACE ${env.WORKSPACE}"
 	 		sh "terraform init"
  	
		}
	 }

}
