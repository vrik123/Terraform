pipeline{
	agent any
	environment {
	  PATH = "${PATH}:${getTerrPath()}"
	  }
	stages{
	stage ('Terraform-Init'){
	    steps{
	     dir("${env.WORKSPACE}/Test"){
               sh "pwd"
	      sh "terraform init"
	      sh "cd /Test"
	      sh "terraform apply --auto-approve"
	         }
	    }
	}
}
}
def getTerrPath(){
def tfHome = tool name: 'Terraorm-12', type: 'terraform'
return tfHome
}
